                @Html.DisplayFor(modelItem => item.AnUong.TenBuaAn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.KSan.TenKhachSan)
            </td>
            <td style="display:flex">
                @Html.ActionLink("Edit", "Edit", new { id = item.MaLichTrinh }) |
                @Html.ActionLink("Details", "Details", new { id = item.MaLichTrinh }) |
