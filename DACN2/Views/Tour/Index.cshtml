@model IEnumerable<DACN2.Models.Tour>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


    <div class="containers">
        <div id="slides">
            <div class="items" style="background-image: url('/Content/images/BMT.jpg');">
                <div class="contents">
                    <div class="names">Hanoi</div>
                    <div class="dess">Thong Tin Tour</div>
                    <button>See more</button>
                </div>
            </div>

            <div class="items" style="background-image: url('/Content/images/halong.jpg');">
                <div class="contents">
                    <div class="names">Hanoi</div>
                    <div class="dess">Thong Tin Tour</div>
                    <button>See more</button>
                </div>
            </div>

            <div class="items" style="background-image: url('/Content/images/danang.jpg');">
                <div class="contents">
                    <div class="names">Hanoi</div>
                    <div class="dess">Thong Tin Tour</div>
                    <button>See more</button>
                </div>
            </div>

            <div class="items" style="background-image: url('/Content/images/BMT.jpg');">
                <div class="contents">
                    <div class="names">Hanoi</div>
                    <div class="dess">Thong Tin Tour</div>
                    <button>See more</button>
                </div>
            </div>

            <div class="items" style="background-image: url('/Content/images/danang.jpg');">
                <div class="contents">
                    <div class="names">Hanoi</div>
                    <div class="dess">Thong Tin Tour</div>
                    <button>See more</button>
                </div>
            </div>

            <div class="items" style="background-image: url('/Content/images/halong.jpg');">
                <div class="contents">
                    <div class="names">Hanoi</div>
                    <div class="dess">Thong Tin Tour</div>
                    <button>See more</button>
                </div>
            </div>
        </div>
        <div class="buttons">
            <button id="prev"><i class="fa-solid fa-chevron-left"></i></button>
            <button id="next"><i class="fa-solid fa-chevron-right"></i></button>
        </div>
    </div>




<div class="row show-on-scroll right-to-left" style="display:block">



    @foreach (var item in Model)
    {
        <div class="">
            <div class="col-xs-12 col-sm-6 col-md-4">
                <div class="col-xs-12 cardItem">
                    <a href="/du-lich/tour-nhat-ban-7n6d-cung-duong-vang-hanh-trinh-mua-thu/1825">
                        <div class="col-xs-12 no-padding cardItemContainer">
                            <div class="col-xs-12 no-padding cardItemImage">
                                <div class="ribbonContainerOuter">
                                    <div class="ribbonContainerInner">
                                        <span class="v-ribbon"><span>@item.ChiTietTour</span></span>
                                    </div>
                                </div>
                                <figure>
                                    <picture>

                                        <img class="img-responsive" src="@item.Hinh" style=" height:200px; object-fit:cover">
                                    </picture>
                                </figure>
                                <div class="cardItemPriceDivOuter hidden">
                                    <div class="cardItemPriceDivInner">
                                        <span class="cardItemPriceAfterDiscount"><i class="glyphicon glyphicon-map-marker"></i>@item.TenTour</span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xs-12 cardItemContent">
                                <div class="col-xs-12 no-padding">
                                    <div class="col-xs-12 v-margin-bottom-10 cardItemTourNameDiv">
                                        <span class="cardItemTourName">@item.TenTour</span>
                                    </div>
                                    <div class="col-xs-12 no-padding cardItemTourDetailDiv">
                                        <div class="col-xs-12 v-margin-bottom-10 hidden-xs">
                                            <div class="row">
                                                <div class="col-xs-6">
                                                    <span><i class="glyphicon glyphicon-time" data-toggle="tooltip" title="" data-original-title="Thời lượng tour"></i>@item.NgayKhoiHanh - @item.NgayKetThuc </span>
                                                </div>
                                                <div class="col-xs-6 text-right transportDiv">
                                                    <i class="fa icon-plane" data-toggle="tooltip" title="" data-original-title="Di chuyển bằng Máy bay"></i><i class="fa icon-bus" data-toggle="tooltip" title="" data-original-title="Di chuyển bằng Ô tô"></i>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 v-margin-bottom-5 cardItemDepartDiv">

                                            <p>@item.ChiTietTour</p>
                                        </div>
                                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 cardItemPrice">
                                            <div class="tourBooking24H hidden" data-id="1825">0 khách đặt trong 24h qua</div>
                                            <div class="clearfix visible-xs"></div>
                                            <span class="price vcolor-info">@item.Gia <small class="textCurrency">VND</small></span>
                                        </div>
                                        <div class="panel-footer clearfix">
                                            <div class="pull-right">
                                                <a class="btn btn-default" href="@Url.Action("Detail", "Tour",new { @id = item.ID})">Thong Tin</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </a>

                </div>

            </div>
        </div>



    }
</div>



<script>
    document.getElementById('next').onclick = function () {
        let lists = document.querySelectorAll('.items');
        document.getElementById('slides').appendChild(lists[0]);
    }

    document.getElementById('prev').onclick = function () {
        let lists = document.querySelectorAll('.items');
        document.getElementById('slides').prepend(lists[lists.length - 1]);
    }
</script>

<style>
* {
    padding: 0;
    margin: 0;
    box-sizing: border-box;
}

bodys {
    background-color: #eaeaea;
    opacity: 1;

}

    .containers {
        margin-top: 350px;
        margin-bottom: -200px;
        position: relative;
        left: 50%;
        top: 20%;
        transform: translate(-50%,-50%);
        width: 1000px;
        height: 600px;
        background-color: #f5f5f5;
        box-shadow: 0 30px 50px #dbdbdb;
    }

#slides {
    width: max-content;
    margin-top: 50px;
}

.items {
    width: 200px;
    height: 300px;
    background-position: 50% 50%;
    display: inline-block;
    transition: 0.5s;
    background-size: cover;
    position: absolute;
    z-index: 1;
    top: 50%;
    transform: translate(0,-50%);
    border-radius: 20px;
    box-shadow: 0 30px 50px #505050;
}

    .items:nth-child(1),
    .items:nth-child(2) {
        left: 0;
        top: 0;
        transform: translate(0,0);
        border-radius: 0;
        width: 100%;
        height: 100%;
        box-shadow: none;
    }

    .items:nth-child(3) {
        left: 50%;
    }

    .items:nth-child(4) {
        left: calc(50% + 220px);
    }

    .items:nth-child(5) {
        left: calc(50% + 440px);
    }

    .items:nth-child(n+6) {
        left: calc(50% + 660px);
        opacity: 0;
    }

    .items .contents {
        position: relative;
        top: 50%;
        left: 100px;
        width: 300px;
        text-align: left;
        padding: 0;
        color: #eee;
        transform: translate(0,-50%);
        display: none;
        font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
    }

    .items:nth-child(2) .contents {
        display: block;
        z-index: 1111;
    }

    .items .names {
        font-size: 40px;
        font-weight: bold;
        opacity: 0;
        animation: showcontent 1s ease-in-out 1 forwards;
    }

    .items .dess {
        margin: 20px 0;
        opacity: 0;
        animation: showcontent 1s ease-in-out 0.4s 1 forwards;
    }

    .items button {
        color: black;
        padding: 10px 20px;
        border-radius: 20px;
        opacity: 0;
        border: none;
        transition: 1s;
        animation: showcontent 1s ease-in-out 0.8s 1 forwards;
    }

        .items button:hover {
            background-color: black;
            font-weight: bold;
            color:#f5f5f5;
            
        }

        @@-webkit-keyframes showcontent {
            from {
        opacity: 0;
        transform: translate(0,100px);
        filter: blur(33px);
    }

    to {
        opacity: 1;
        transform: translate(0,10);
        filter: blur(0);
    }
}


.buttons {
    position: absolute;
    bottom: 30px;
    z-index: 222222;
    text-align: center;
    width: 100%;
}

    .buttons button {
        width: 30px;
        height: 30px;
        border-radius: 50%;
        border: 1px solid #555;
        transition: 0.5s;
    }

        .buttons button:hover {
            background-color: #a2a27f;
        }

</style>